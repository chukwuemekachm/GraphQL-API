{
  "name": "GraphQL-API",
  "version": "1.0.0",
  "description": "A Basic GraphQL API for Books.",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "prestart": "npm run build",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node -- src/index.ts",
    "docker": "docker-compose up -d",
    "prisma": "prisma deploy",
    "generate:type": "graphqlgen",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/chukwuemekachm/GraphQL-API.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/chukwuemekachm/GraphQL-API/issues"
  },
  "homepage": "https://github.com/chukwuemekachm/GraphQL-API#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/aws-lambda": "^8.10.17",
    "@types/bcryptjs": "^2.4.2",
    "@types/dotenv": "^6.1.0",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/ws": "^6.0.1",
    "bcryptjs": "^2.4.3",
    "class-validator": "^0.9.1",
    "dotenv": "^6.2.0",
    "graphql-yoga": "^1.16.9",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8",
    "prisma-client-lib": "^1.24.0",
    "typescript": "^3.2.2"
  },
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "nodemon": "^1.18.9",
    "prettier": "1.15.3",
    "ts-node": "^7.0.1"
  }
}
