type Publisher {
  id: ID! @unique
  name: String!
  about: String
  address: String
  publication: [Book!]
  createdAt: DateTime!
  updatedAt: DateTime!
}

type User {
  id: ID! @unique
  firstName: String!
  lastName: String!
  email: String! @unique
  password: String!
  books: [Book!]
  reviews: [Review!]
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Book {
  id: ID! @unique
  title: String!
  description: String
  publishers: [Publisher!]!
  pages: Int
  publishDateTime: DateTime!
  authors: [User!]!
  ratings: [Rating!]
  isbnNo: Int
  createdAt: DateTime!
  updatedAt: DateTime!
}

type Review {
  id: ID! @unique
  review: String!
  reviewer: User!
  book: Book!
  createdAt: DateTime!
}

type Rating {
  id: ID! @unique
  rating: Int!
  rater: User!
  book: Book!
  createdAt: DateTime!
}
